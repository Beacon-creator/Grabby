<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Grabby_Two.View.TabbedPages"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            x:Class="Grabby_Two.View.HomeScreen"
             BarBackgroundColor="Transparent"
            SelectedTabColor="{DynamicResource PrimaryBrandColor}"
            UnselectedTabColor="{DynamicResource PrimaryBackgroundColor2}"
            android:TabbedPage.ToolbarPlacement="Bottom">



    <TabbedPage.Children>
        <local:HomePage IconImageSource="home.svg" Title="Home" />
        <local:SearchPage IconImageSource="search.svg" Title="Search" />
        <local:CartPage IconImageSource="cart.svg" Title="Cart" />
        <local:AccountPage IconImageSource="account.svg" Title="Account" />
    </TabbedPage.Children>
</TabbedPage>
