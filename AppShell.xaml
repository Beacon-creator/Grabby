<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grabby_Two.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grabby_Two.View"
       xmlns:local1="clr-namespace:Grabby_Two.View.TabbedPages"
       xmlns:local2="clr-namespace:Grabby_Two.View.TabbedPages.HomeCrew"
     xmlns:local3="clr-namespace:Grabby_Two.View.TabbedPages.HomeCrew.FashionStores"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    Title="Grabby_Two">


    <ShellContent
        ContentTemplate="{DataTemplate local:StartPage}"
        Route="StartPage"/>
    <ShellContent
    ContentTemplate="{DataTemplate local:SignInPage}"
    Route="SignInPage"/>
    <ShellContent
  ContentTemplate="{DataTemplate local:SignUpPage}"
  Route="SignUpPage"/>
    <ShellContent
 ContentTemplate="{DataTemplate local:CodeVerificationSignUpPage}"
 Route="CodeVerificationSignUpPage"/>
    <ShellContent
ContentTemplate="{DataTemplate local:CartPage}"
Route="CartPage"/>
    <ShellContent
    ContentTemplate="{DataTemplate local:AccountPage}"
    Route="AccountPage"/>

    <ShellContent
    ContentTemplate="{DataTemplate local:HomeScreen}"
    Route="HomeScreen"/>
    <ShellContent
  ContentTemplate="{DataTemplate local1:SearchPage}"
  Route="SearchPage"/>
    <ShellContent
 ContentTemplate="{DataTemplate local1:HomePage}"
 Route="HomePage"/>
    <ShellContent
ContentTemplate="{DataTemplate local1:AccountPage}"
Route="ForgotPasswordVerificationPage"/>
    <ShellContent
    ContentTemplate="{DataTemplate local1:CartPage}"        
    Route="CartPage"/>

    <ShellContent
        ContentTemplate="{DataTemplate local2:FashionPage}"
        Route="FashionPage"/>
    <ShellContent
    ContentTemplate="{DataTemplate local2:StoreInformation}"
    Route="StoreInformation"/>
    <ShellContent
  ContentTemplate="{DataTemplate local3:FashionStore1}"
  Route="FashionStore1"/>
    <ShellContent
 ContentTemplate="{DataTemplate local3:ProductDetails1}"
 Route="ProductDetails1"/>

</Shell>
