<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom_renderer="clr-namespace:Grabby_Two.Custom_Render"          
             x:Class="Grabby_Two.Custom_Render.DesignerCard">
    <ContentView.Content>
        <Frame WidthRequest="108" Margin="5,0,0,0"  HeightRequest="50"
               BackgroundColor="{DynamicResource SecondaryBackgroundColor}" CornerRadius="10" Padding="5">
            <StackLayout Orientation="Horizontal" Spacing="10">
                
                <ImageButton CornerRadius="10" Padding="5" Margin="2,0,0,0" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" 
                        BackgroundColor="{DynamicResource MastersBackgroundColor2}" Source="{Binding IconSource}" 
                     />
                <Label Text="{Binding Text}" Margin="0,0,3,0" FontAttributes="Bold" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>