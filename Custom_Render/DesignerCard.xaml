<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom_renderer="clr-namespace:Grabby_Two.Custom_Render"          
             x:Class="Grabby_Two.Custom_Render.DesignerCard">
    <ContentView.Content>
        <Frame WidthRequest="120" BorderColor="{DynamicResource MastersBackgroundColor}"  HeightRequest="65"
               BackgroundColor="{DynamicResource SecondaryBackgroundColor}" 
               CornerRadius="10" Padding="5">
            <StackLayout Orientation="Horizontal">
                
                <ImageButton CornerRadius="10" Padding="4" Margin="0,0,0,0" WidthRequest="50" 
                             HeightRequest="45" HorizontalOptions="Center" 
                        BackgroundColor="{DynamicResource BackgoundWhite}" Source="{Binding IconSource}" 
                     />
                <Label Text="{Binding Text}" Margin="0,0,5,0" FontAttributes="Bold" 
                       HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>