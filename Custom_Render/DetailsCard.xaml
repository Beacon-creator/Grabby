<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grabby_Two.Custom_Render.DetailsCard">
  <ContentView.Content>
        <Frame HasShadow="True" Padding="0"  CornerRadius="8">

            <Image Margin="0" Grid.Row="0" HeightRequest="217" WidthRequest="250"
                   Source="{Binding BackgroundImageSource}" Aspect="AspectFill" />
        </Frame>
    </ContentView.Content>
</ContentView>